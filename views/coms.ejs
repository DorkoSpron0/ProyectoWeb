<% for(var i = 0; i<coments.length; i++ ) {%>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h1><%= coments[i].author %></h1>
                        <h1><%= coments[i].title %></h1>
                        <p><%= coments[i].description %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }%>